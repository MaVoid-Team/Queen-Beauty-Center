
# Nginx reverse-proxy example for this Next.js app when Nginx runs in Docker
#
# Assumptions:
# - The app is exposed on host port 3022 (ports: 3022:3000 in docker-compose.yml).
# - Nginx runs in the same Docker network and routes by domain.
#
# Install layout example:
# - /etc/nginx/sites-available/queen-beauty-center
# - ln -s /etc/nginx/sites-available/queen-beauty-center /etc/nginx/sites-enabled/queen-beauty-center

upstream queen_beauty_center_upstream {
    server queen:3022;
    keepalive 32;
}


# HTTPS vhost
server {
    server_name queen.mavoid.com;  # TODO: set your real domain

    # Managed by certbot (recommended)
    # ssl_certificate /etc/letsencrypt/live/queen.example.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/queen.example.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 10M;

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Static assets: cache aggressively (hashed filenames)
    location ^~ /_next/ {
        proxy_pass http://queen_beauty_center_upstream;
        proxy_http_version 1.1;

        expires 365d;
        add_header Cache-Control "public, immutable";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        proxy_pass http://queen_beauty_center_upstream/;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Safe defaults for Next.js (and future WS usage)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    access_log /var/log/nginx/queen-beauty-center_access.log;
    error_log /var/log/nginx/queen-beauty-center_error.log warn;
}